{
  "name": "react-transition-state",
  "version": "2.3.1",
  "description": "Zero dependency React transition state machine.",
  "author": "Zheng Song",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/szhsin/react-transition-state.git"
  },
  "homepage": "https://szhsin.github.io/react-transition-state/",
  "main": "./dist/cjs/index.cjs",
  "module": "./dist/esm/index.mjs",
  "types": "./types/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist/",
    "types/*.d.ts"
  ],
  "keywords": [
    "react",
    "transition",
    "animation",
    "component",
    "hook",
    "state machine"
  ],
  "scripts": {
    "start": "rollup -c -w",
    "clean": "rm -Rf dist",
    "bundle": "rollup -c",
    "test": "jest",
    "eg": "npm start --prefix example",
    "types": "cd types && tsc",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "pret": "prettier -c .",
    "pret:fix": "prettier -w .",
    "build": "run-s pret clean lint types bundle"
  },
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "require": "./dist/cjs/index.cjs",
      "default": "./dist/esm/index.mjs"
    },
    "./package.json": "./package.json"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "babel-plugin-pure-annotations": "^0.1.2",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-hooks-addons": "^0.5.0",
    "globals": "^16.3.0",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "react": "^19",
    "react-dom": "^19",
    "rollup": "^4.46.1",
    "typescript": "^5.8.3"
  }
}
