{
  "name": "react-transition-state",
  "version": "2.2.0",
  "description": "Zero dependency React transition state machine.",
  "author": "Zheng Song",
  "license": "MIT",
  "repository": "szhsin/react-transition-state",
  "homepage": "https://szhsin.github.io/react-transition-state/",
  "main": "dist/cjs/index.js",
  "module": "dist/es/index.js",
  "types": "types/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist/",
    "types/*.d.ts"
  ],
  "keywords": [
    "react",
    "transition",
    "animation",
    "component",
    "hook",
    "state machine"
  ],
  "scripts": {
    "start": "rollup -c -w",
    "clean": "rm -Rf dist",
    "bundle": "rollup -c",
    "test": "jest",
    "eg": "npm start --prefix example",
    "types": "cd types && tsc",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "pret": "prettier -c .",
    "pret:fix": "prettier -w .",
    "build": "run-s pret clean lint types bundle"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@babel/core": "^7.25.7",
    "@babel/preset-env": "^7.25.4",
    "@eslint/compat": "^1.1.1",
    "@rollup/plugin-babel": "^6.0.4",
    "@testing-library/react": "^16.0.1",
    "@types/jest": "^29.5.14",
    "babel-plugin-pure-annotations": "^0.1.2",
    "eslint": "^9.9.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^28.8.3",
    "eslint-plugin-react": "^7.37.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-hooks-addons": "^0.3.1",
    "globals": "^15.11.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rollup": "^4.24.0",
    "typescript": "^5.6.3"
  },
  "overrides": {
    "eslint-plugin-react-hooks": {
      "eslint": "$eslint"
    }
  }
}
